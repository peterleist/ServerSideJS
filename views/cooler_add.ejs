<%- include ('header', {style: 'style'}) -%>
    <div class="container">
        <div class="py-5 text-center">
            <h2>Add cooler</h2>
        </div>
        <div class="row">
            <div class="col-md-12 order-md-1">
                <form class="needs-validation" novalidate>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" placeholder="" value="" required>
                            <div class="invalid-feedback">
                                Valid company name is required.
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="type">Type</label>
                            <input type="text" class="form-control" id="type" placeholder="" value="" required>
                            <div class="invalid-feedback">
                                Valid last name is required.
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="status">Status</label>
                            <input type="text" class="form-control" id="status" placeholder="" value="" required>
                            <div class="invalid-feedback">
                                Valid company name is required.
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="d_date">Deploy date</label>
                            <input type="text" class="form-control" id="d_date" placeholder="" value="" required>
                            <div class="invalid-feedback">
                                Valid last name is required.
                            </div>
                        </div>
                    </div>
                    <hr class="mb-4">
                    <div class="row">
                        <div class="col text-center">
                            <a class="btn btn-dark btn-lg" type="submit" href="/coolers/:companyid">Submit</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <%- include ('footer') -%>